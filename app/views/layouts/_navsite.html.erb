<%= nav_bar :static => :top,  :brand => 'Home',responsive: true, fluid: true do %>

  <%= menu_group do %>
    <%= menu_item "Admin", '/menu' %>
  <% end %>

  <%= menu_group pull: :right do %>
    <% if user_signed_in? -%>
      <%= menu_item "Produtos", products_path %>
      <%= menu_item "Categoria", categories_path %>

      <%= drop_down current_user.email do %>
        <%= menu_item 'Editar Perfil', edit_user_registration_path -%>
      <% end -%>

      <%= menu_item 'Sair', destroy_user_session_path, method: :delete -%>
    <% else -%>
      <%= menu_item 'Login', new_user_session_path -%>
      <%= menu_item 'Cadastre-se', new_user_registration_path -%>
    <% end -%>
  <% end -%>

<% end -%>
