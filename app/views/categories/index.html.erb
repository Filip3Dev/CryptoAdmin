<div class="container">
  <div class="row">
    <div class="col-md-12">
	<h1>Categorias</h1>
<div class="page-header">
	<%= link_to "Cadastrar", new_category_path, class: 'btn btn-primary pull-right' %>

</div>
<table class="table table-bordered table-condensed">
  <thead>
    <tr>
      <th>Nome</th>
			<th>Descrição</th>
      <th>Valor</th>
      <th>Quantidade</th>
      <th>Inserção</th>
      <th>Opções</th>
    </tr>
  </thead>


  <tbody>
    <% @categories.each do |category| %>
      <tr>
  			<td style="font-size:17px;"> <b><%= category.name %></b></td>
  			<td style="font-size:17px;"> <b><%= category.description %></b></td>
  			<td style="font-size:17px;"> <b><%= category.value %></b></td>
        <td style="font-size:17px;"> <b><%= category.products.size %></b></td>
        <td style="font-size:17px;"> <b><%= category.created_at %></b></td>
        <td>
          <%= link_to "Ver", category, class: 'btn btn-info' %>
          <%= link_to "Editar", edit_category_path(category), class: 'btn btn-primary' %>
          <%= link_to "Apagar", category,
  					data: { method: :delete},	class: 'btn btn-danger'
  				%>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>
</div>
</div>
</div>
